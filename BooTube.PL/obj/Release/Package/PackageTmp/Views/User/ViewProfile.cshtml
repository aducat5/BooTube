@model Tuple<User, List<Channel>>

@{
    ViewBag.Title = Model.Item1.FullName + " - Kullanıcı Profili";
}

<section class="content-header">
    <h1>
        @Model.Item1.FullName - Kullanıcı Profili
    </h1>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-3">
            <!-- Profile Image -->
            <div class="box box-danger">
                <div class="box-body box-profile">
                    <img class="profile-user-img img-responsive img-circle" src="~/Content/Images/ProfilePictures/@Model.Item1.ProfilePicture" alt="User profile picture">
                    <h3 class="profile-username text-center">@Model.Item1.FullName</h3>
                    <p class="text-muted text-center">@Model.Item1.CreateTime.Year yılından beri üye</p>
                    <ul class="list-group list-group-unbordered">
                        <li class="list-group-item">
                            <b>Yorum</b> <a class="pull-right">1,322</a>
                        </li>
                        <li class="list-group-item">
                            <b>Takip</b> <a class="pull-right">543</a>
                        </li>
                        <li class="list-group-item">
                            <b>Beğeni</b> <a class="pull-right">13,287</a>
                        </li>
                    </ul>
                    <div>
                        @if (Model.Item1.UserID == ((User)Session["user"]).UserID)
                        {
                            <a href="@Url.Action("EditProfile","User")" class="btn btn-warning btn-flat btn-block"><b>Düzenle </b><i class="fa fa-edit fa-fw"></i></a>
                        }
                        else
                        {
                            <a href="@Url.Action("BanProfile","User", new { id = Model.Item1.UserID })" class="btn btn-danger btn-flat btn-block"><i class="fa fa-ban fa-fw"></i><b> Engelle</b></a>
                        }
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
            <!-- About Me Box -->
            <div class="box box-danger">
                <div class="box-header with-border">
                    <h3 class="box-title">Hakkımda</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <strong>Sosyal</strong><br />
                    <div class="btn-group">
                        <a class="btn btn-facebook btn-flat">
                            <i class="fab fa-facebook-square fa-2x"></i>
                        </a>
                        <a class="btn btn-google btn-flat">
                            <i class="fab fa-google-plus-square fa-2x"></i>
                        </a>
                        <a class="btn btn-twitter btn-flat">
                            <i class="fab fa-twitter-square fa-2x"></i>
                        </a>
                        <a class="btn btn-instagram btn-flat">
                            <i class="fab fa-instagram fa-2x"></i>
                        </a>
                        <a class="btn btn-pinterest btn-flat">
                            <i class="fab fa-pinterest-square fa-2x"></i>
                        </a>
                        <a class="btn btn-tumblr btn-flat">
                            <i class="fab fa-tumblr-square fa-2x"></i>
                        </a>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
        <div class="col-md-9">
            <div class="nav-tabs-custom">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#channels" data-toggle="tab">Kanallar</a></li>
                    <li><a href="#favorites" data-toggle="tab">Favoriler</a></li>
                    <li><a href="#followeds" data-toggle="tab">Takip Ettikleri</a></li>
                </ul>
                <div class="tab-content">
                    <div class="active tab-pane" id="channels">
                        <div class="row">
                            @Html.Partial("_ChannelsPartial", Model.Item2)
                        </div>

                        <!-- Widget: user widget style 1 -->

                    </div>
                    <!-- /.tab-pane -->
                    <div class="tab-pane" id="favorites">

                    </div>
                    <!-- /.tab-pane -->
                    <div class="tab-pane" id="followeds">

                    </div>
                    <!-- /.tab-pane -->
                </div>
                <!-- /.tab-content -->
            </div>
            <!-- /.nav-tabs-custom -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>