@helper PostPreview(string thumbnailPath, string postTitle, string channelName, int postID, int channelID, int clickCount)
{
    <div class="row">
        <div class="col-md-6">
            <a href="/Post/ViewPost?id=@postID"><img class="img-responsive" src="~/Content/Images/Thumbnails/@thumbnailPath" /></a>
        </div>
        <div class="col-md-6">
            <h4 class="postTitle"><a href="/Post/ViewPost?id=@postID">@postTitle</a></h4>
            <h5 class="postMeta"><a href="/Channel/ViewChannel?id=@channelID">@channelName</a></h5>
            <h5 class="postMeta">@clickCount</h5>
        </div>
    </div>
}

